             >
        <ImageView
           android:id="@+id/percent4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingRight="20dp"
           android:src="@drawable/water" />
        <ImageView
           android:id="@+id/percent5"
           android:layout_width="wrap_content"
